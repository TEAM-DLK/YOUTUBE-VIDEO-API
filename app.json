{
  "name": "YouTube Downloader Bot",
  "description": "A Telegram bot to download YouTube videos.",
  "repository": "https://github.com/TEAM-DLK/YOUTUBE-VIDEO-API",
  "logo": "https://img.icons8.com/color/48/youtube-play.png",
  "keywords": ["telegram", "youtube", "pyrogram", "pytube"],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "API_ID": {
      "description": "Telegram API ID from https://my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash from https://my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Telegram bot token from @BotFather",
      "required": true
    },
    "COOKIES_PATH": {
      "description": "Path to cookies.txt (e.g., /app/cookies.txt)",
      "value": "cookies/cookies.txt",
      "required": true
    },
    "CHANNEL_USERNAME": {
      "description": "Your channel username (without @)",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  }
}