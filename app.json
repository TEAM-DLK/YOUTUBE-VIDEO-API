{
  "name": "yt-downloader-bot",
  "description": "Telegram bot to download YouTube videos",
  "repository": "https://github.com/yourusername/yt-downloader-bot",
  "logo": "https://path-to-your-logo-image.com/logo.png",
  "keywords": ["telegram", "bot", "youtube", "video downloader"],
  "env": {
    "API_ID": {
      "description": "Telegram API ID",
      "value": "your_api_id"
    },
    "API_HASH": {
      "description": "Telegram API Hash",
      "value": "your_api_hash"
    },
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "value": "your_bot_token"
    },
    "CHANNEL_USERNAME": {
      "description": "Your Telegram Channel Username (without @)",
      "value": "your_channel_username"
    },
    "COOKIES_PATH": {
      "description": "Path to cookies.txt file",
      "value": "cookies.txt"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": "echo 'App has been deployed'"
  }
}
